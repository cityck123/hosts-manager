{
  "name": "hosts-manager",
  "version": "1.0.0",
  "description": "Windows Hosts文件管理工具",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron": "electron .",
    "electron:dev": "vite build && electron .",
    "electron:build": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": ["hosts", "manager", "windows", "electron", "vue"],
  "author": "Hosts Manager Team",
  "license": "MIT",
  "devDependencies": {
    "vite": "^5.0.0",
    "vue": "^3.4.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "@vitejs/plugin-vue": "^5.0.0",
    "element-plus": "^2.5.0",
    "@element-plus/icons-vue": "^2.3.0"
  },
  "build": {
    "appId": "com.hosts.manager",
    "productName": "Hosts文件管理器",
    "directories": {
      "output": "build-output-new"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "!node_modules"
    ],
    "extraResources": [
      {
        "from": "electron",
        "to": "electron"
      },
      {
        "from": "dist",
        "to": "dist"
      },
      {
        "from": "public",
        "to": "public"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
